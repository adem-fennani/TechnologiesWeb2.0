<!DOCTYPE html>
<html>
<head>
    <title>Book</title>
    {% include 'links.html.twig' %}
</head>
<body>
    {% include 'navbar.html.twig' %}
    <main class="container mt-4">
        <h1 class="display-4 text-center">Add a new book</h1>

        <!-- Contact Form -->
        <div class="contact-form">
            {{form_start(form)}}
                <table>
                    <tr>
                        <td>Title</td>
                        <td>{{form_widget(form.title)}}</td>
                    </tr>
                    <tr>
                        <td>Number of pages</td>
                        <td>{{form_widget(form.nbrPages)}}</td>
                    </tr>
                    <tr>
                        <td>Author</td>
                        <td>{{form_widget(form.author)}}</td>
                    </tr>

                </table>
            {{form_end(form)}}
        </div>

        <!-- Only the blue rectangles at the bottom -->
        <div class="shapes-container">
            <div class="extra-shape"></div>
            <div class="extra-shape"></div>
            <div class="extra-shape"></div>
            <div class="extra-shape"></div>
        </div>
    </main>
    {% include 'footer.html.twig' %}

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
