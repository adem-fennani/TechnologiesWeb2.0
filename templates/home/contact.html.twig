<!DOCTYPE html>
<html>
<head>
    <title>Contact Us</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    <!-- Link to Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;700&display=swap" rel="stylesheet">
    <style>
        /* Navbar and footer gradient */
        .navbar, .footer {
            background: linear-gradient(90deg, #ff7f50, #1e90ff);
        }

        /* Home link color */
        .navbar .navbar-brand {
            color: #ffffff !important;
        }

        /* Apply Open Sans font to the body */
        body {
            font-family: 'Open Sans', sans-serif;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        /* Main content area with flexible space */
        main {
            flex-grow: 1;
        }

        /* Form styles */
        .contact-form {
            max-width: 600px;
            margin: 0 auto;
            padding: 30px;
            background-color: #f9f9f9;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        /* New Shape styles for Contact Page */
        .shapes-container {
            display: flex;
            justify-content: center;
            align-items: center;
            margin-top: 50px;
            flex-wrap: wrap;
        }

        /* Triangle with animation (First Shape) */
        .triangle {
            width: 0;
            height: 0;
            border-left: 60px solid transparent;
            border-right: 60px solid transparent;
            border-bottom: 120px solid #6a5acd;
            margin: 10px;
            animation: bounce 3s infinite alternate;
        }

        /* Rectangle with animation (Second Shape) */
        .rectangle {
            width: 120px;
            height: 80px;
            background-color: #ff5733;
            margin: 10px;
            animation: slide 4s infinite alternate;
        }

        /* Hexagon with animation (Third Shape) */
        .hexagon {
            width: 100px;
            height: 55px;
            background-color: #28a745;
            position: relative;
            margin: 10px;
            animation: spin 6s infinite linear;
        }

        .hexagon:before,
        .hexagon:after {
            content: "";
            position: absolute;
            width: 0;
            border-left: 50px solid transparent;
            border-right: 50px solid transparent;
        }

        .hexagon:before {
            bottom: 100%;
            border-bottom: 30px solid #28a745;
        }

        .hexagon:after {
            top: 100%;
            width: 0;
            border-top: 30px solid #28a745;
        }

        /* Animations */
        @keyframes bounce {
            0% {
                transform: translateY(0);
            }
            100% {
                transform: translateY(-15px);
            }
        }

        @keyframes slide {
            0% {
                transform: translateX(0);
            }
            100% {
                transform: translateX(20px);
            }
        }

        @keyframes spin {
            0% {
                transform: rotate(0deg);
            }
            100% {
                transform: rotate(360deg);
            }
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg">
        <div class="container">
            <a class="navbar-brand" href="{{ path('app_home') }}">Home</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link text-light" href="{{ path('app_contact') }}">Contact</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <main class="container mt-4">
        <h1 class="display-4 text-center">Contact me</h1>
        <p class="lead text-center">I'd love to hear from you! Please fill out the form below.</p>

        <!-- Contact Form -->
        <div class="contact-form">
            <form>
                <div class="mb-3">
                    <label for="name" class="form-label">Name</label>
                    <input type="text" class="form-control" id="name" placeholder="Your name">
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Email address</label>
                    <input type="email" class="form-control" id="email" placeholder="Your email">
                </div>
                <div class="mb-3">
                    <label for="university" class="form-label">University</label>
                    <input type="text" class="form-control" id="university" placeholder="Your university">
                </div>
                <div class="mb-3">
                    <label for="message" class="form-label">Message</label>
                    <textarea class="form-control" id="message" rows="4" placeholder="Your message"></textarea>
                </div>
                <button type="submit" class="btn btn-primary w-100">Submit</button>
            </form>
        </div>

        <!-- Dynamic Shapes -->
        <div class="shapes-container">
            <div class="triangle"></div>
            <div class="rectangle"></div>
            <div class="hexagon"></div>
        </div>

        <!-- More Shapes to Push Footer Down -->
        <div class="shapes-container">
            <div class="hexagon"></div>
            <div class="triangle"></div>
            <div class="rectangle"></div>
        </div>
    </main>

    <footer class="footer text-light p-3 mt-5">
        <div class="container">
            &copy; 2023 My Website
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
