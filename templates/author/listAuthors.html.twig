<!DOCTYPE html>
<html>
<head>
    <title>Welcome to My Website</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    <!-- Link to Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;700&display=swap" rel="stylesheet">
    <style>
        /* Navbar and footer gradient */
        .navbar, .footer {
            background: linear-gradient(90deg, #ff7f50, #1e90ff);
        }

        /* Home link color back to white */
        .navbar .navbar-brand {
            color: #ffffff !important;
        }

        /* Apply Open Sans font to the body */
        body {
            font-family: 'Open Sans', sans-serif;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        /* Main content area with flexible space */
        main {
            flex-grow: 1;
        }

        /* Table styles */
        .table-container {
            max-width: 900px;
            margin: 0 auto;
            padding: 20px;
        }

        .table th, .table td {
            vertical-align: middle;
            text-align: center;
        }

        /* Blue header styling */
        .table thead {
            background-color: #1e90ff;
            color: #ffffff;
        }

        /* Container for the blue rectangles, aligning them on the same line */
        .shapes-container {
            display: flex;
            justify-content: center;
            align-items: center;
            margin-top: 50px;
        }

        /* Blue rectangle styles (same color as the navbar) */
        .extra-shape {
            width: 80px;
            height: 80px;
            background-color: #1e90ff;
            margin: 10px;
            border-radius: 10px;
        }

        /*Text for the number of authors and books */
        .summary-text {
            font-size: 1rem; /* Smaller font size */
            margin: 10px 0;  /* Adjust margin for spacing */
        }
    </style>
</head>
<body>
<nav class="navbar navbar-expand-lg">
        <div class="container">
            <a class="navbar-brand" href="{{ path('app_home') }}">Home</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link text-light" href="{{ path('app_contact') }}">Contact</a>
                    </li>
                </ul>
            </div>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link text-light" href="{{ path('app_author_list') }}">Authors</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <main class="container mt-4">
        <h1 class="display-4 text-center">Authors</h1>
        {% if authors is not empty and authors is defined %}
        {% set totalBooks = 0 %}
        
        <!-- Author Table in a Card -->
        <div class="table-container">
            <div class="card shadow-sm">
                <div class="card-body">
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Image</th>
                                <th>Number of books</th>
                            </tr>
                        </thead>
                        <tbody>
                        <tr {% for author in authors %}>
                            {% set totalBooks = totalBooks + author.numberOfBooks %}
                            <td>{{ author.authorName }}</td>
                            <td><img src="{{ asset(author.authorImage) }}" class="img-fluid" width="140px" /></td>
                            <td>{{ author.numberOfBooks }}</td>
                        </tr {% endfor %}>
                        </tbody>
                    </table>

                    <!-- Smaller and more compact summary text -->
                    <h6 class="summary-text text-center">Number of authors: {{ authors|length }}</h6>
                    <h6 class="summary-text text-center">Number of books: {{ totalBooks }}</h6>
                </div>
            </div>
        </div>

        <!-- Only the blue rectangles at the bottom -->
        <div class="shapes-container">
            <div class="extra-shape"></div>
            <div class="extra-shape"></div>
            <div class="extra-shape"></div>
            <div class="extra-shape"></div>
        </div>
    </main>

    <footer class="footer text-light p-3 mt-5">
        <div class="container">
            &copy; 2023 My Website
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    {% else %}
        <h6 class="display-6">This table is not defined</h6>
    {% endif %}
</body>
</html>
