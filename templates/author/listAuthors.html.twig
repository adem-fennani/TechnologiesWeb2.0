<!DOCTYPE html>
<html>
<head>
    <title>Welcome to My Website</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    <!-- Link to Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="{{ asset('styles/main.css') }}">
</head>
<body>
<nav class="navbar navbar-expand-lg">
        <div class="container">
            <a class="navbar-brand" href="{{ path('app_home') }}">Home</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link text-light" href="{{ path('app_contact') }}">Contact</a>
                    </li>
                </ul>
            </div>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link text-light" href="{{ path('app_author_list') }}">Authors</a>
                    </li>
                </ul>
            </div>
                        <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link text-light" href="{{ path('app_crud_author') }}">CRUD</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <main class="container mt-4">
        <h1 class="display-4 text-center">Authors</h1>
        {% if authors is not empty and authors is defined %}
        {% set totalBooks = 0 %}
        
        <!-- Author Table in a Card -->
        <div class="table-container">
            <div class="card shadow-sm">
                <div class="card-body">
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Image</th>
                                <th>Number of books</th>
                            </tr>
                        </thead>
                        <tbody>
                        <tr {% for author in authors %}>
                            {% set totalBooks = totalBooks + author.numberOfBooks %}
                            <td>{{ author.authorName }}</td>
                            <td><img src="{{ asset(author.authorImage) }}" class="img-fluid" width="140px" /></td>
                            <td>{{ author.numberOfBooks }}</td>
                        </tr {% endfor %}>
                        </tbody>
                    </table>

                    <!-- Smaller and more compact summary text -->
                    <h6 class="summary-text text-center">Number of authors: {{ authors|length }}</h6>
                    <h6 class="summary-text text-center">Number of books: {{ totalBooks }}</h6>
                </div>
            </div>
        </div>

        <!-- Only the blue rectangles at the bottom -->
        <div class="shapes-container">
            <div class="extra-shape"></div>
            <div class="extra-shape"></div>
            <div class="extra-shape"></div>
            <div class="extra-shape"></div>
        </div>
    </main>

    <footer class="footer text-light p-3 mt-5">
        <div class="container">
            &copy; 2023 My Website
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    {% else %}
        <h6 class="display-6">This table is not defined</h6>
    {% endif %}
</body>
</html>
